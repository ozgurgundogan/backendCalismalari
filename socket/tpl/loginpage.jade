doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=iso-8859-1')
    meta(http-equiv='Content-Type', content='text/html; charset=iso-8859-9')
    meta(http-equiv='Content-language', content='tr')
    meta(charset='utf-8')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='login.css')
    script(type='text/javascript', charset='utf-8', src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
    script(type='text/javascript', charset='utf-8', src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    script(type='text/javascript', charset='utf-8', src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
    script(type='text/javascript', charset='utf-8', src='login.js')
  body
    .container
      .row
        .col-md-6.col-md-offset-3
          #panel1.panel.panel-login
            .panel-heading
              .row
                .col-xs-6
                  a.login-form-link.active(href='#') Login
                .col-xs-6
                  a.register-form-link(href='#') Register
              hr
            .panel-body
              .row
                .col-lg-12
                  form#login-form(action='loginUser', method='post', role='form', style='display: block;')
                    .form-group
                      input#username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                    .form-group
                      input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                    .form-group.text-center
                      input#remember(type='checkbox', tabindex='3', name='remember')
                      label(for='remember')  Remember Me
                    .form-group
                      .row
                        .col-sm-6.col-sm-offset-3
                          input#login-submit.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')
                    .form-group
                      .row
                        .col-lg-12
                          .text-center
                            a#forgot-pass.forgot-password(href='#', tabindex='5') Forgot Password?
                  form#register-form(action='registerUser', method='post', role='form', style='display: none;')
                    .form-group
                      input#username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                    .form-group
                      input#email.form-control(type='email', name='email', tabindex='1', placeholder='Email Address', value='')
                    .form-group
                      input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                    .form-group
                      input#confirmpassword.form-control(type='password', name='confirmpassword', tabindex='2', placeholder='Confirm Password')
                    .form-group
                      .row
                        .col-sm-6.col-sm-offset-3
                          input#register-submit.form-control.btn.btn-register(type='submit', name='register-submit', tabindex='4', value='Register Now')
          #panel2.panel.panel-login(style='display: none;')
            .panel-heading
              .row
                .col-xs-12
                  a#login-form-link(href='#') Reminder
              hr
            .panel-body
              .row
                .col-lg-12
                  form#register-form(action='remindUser', method='post', role='form')
                    .form-group
                      input#email.form-control(type='email', name='email', tabindex='1', placeholder='Email Address', value='')
                    .form-group
                      .row
                        .col-sm-6.col-sm-offset-3
                          input#register-submit.form-control.btn.btn-warning(type='submit', name='register-submit', tabindex='4', value='REMIND ME')
                  hr
                  .row.text-center
                    .col-xs-6
                      a.login-form-link(href='#') Login
                    .col-xs-6
                      a.register-form-link(href='#') Register
